//@version=5
strategy("ETH Bollinger Bands Conservative", overlay=true, default_qty_type=strategy.percent_of_equity, default_qty_value=5)

// ============================================================================
// ETH USDT CONSERVATIVE PARAMETERS - LOW RISK
// ============================================================================

// Bollinger Bands Parameters - Conservative
bb_length = input.int(15, "Bollinger Bands Period", minval=10, maxval=25)
bb_mult = input.float(2.0, "Bollinger Bands Std Dev", minval=1.5, maxval=2.5, step=0.1)

// Price Filters - Conservative for quality signals
min_price_change = input.float(2.0, "Minimum Price Change (%)", minval=1.0, maxval=4.0, step=0.1) / 100
max_price_change = input.float(8.0, "Maximum Price Change (%)", minval=4.0, maxval=12.0, step=0.1) / 100
high_close_margin = input.float(2.0, "Close-High Margin (%)", minval=1.0, maxval=5.0, step=0.1) / 100

// Volume Filters - Conservative
min_volume = input.float(500000, "Minimum Volume", minval=200000, maxval=1000000, step=100000)
volume_period = input.int(10, "Average Volume Period", minval=5, maxval=20)
volume_multiplier = input.float(1.3, "Volume Multiplier", minval=1.0, maxval=2.0, step=0.1)

// Risk Management - Ultra Conservative
target_profit = input.float(2.0, "Target Profit (%)", minval=1.0, maxval=4.0, step=0.1) / 100
stop_loss_pct = input.float(0.8, "Stop Loss (%)", minval=0.5, maxval=1.5, step=0.1) / 100
trailing_stop = input.bool(true, "Enable Trailing Stop")
trailing_percent = input.float(0.4, "Trailing Stop (%)", minval=0.2, maxval=1.0, step=0.1) / 100

// Analysis Parameters - Conservative
candle_analysis_period = input.int(3, "Candle Analysis Period", minval=2, maxval=5)

// Heiken Ashi Integration
use_heiken_ashi = input.bool(true, "Use Heiken Ashi Candles")

// Conservative Filters
conservative_mode = input.bool(true, "Conservative Mode")
min_atr = input.float(0.8, "Minimum ATR (%)", minval=0.3, maxval=2.0, step=0.1) / 100

// ============================================================================
// CALCULATIONS
// ============================================================================

// Heiken Ashi Calculation - Conservative
ha_close = use_heiken_ashi ? (open + high + low + close) / 4 : close
var float ha_open = na
var float prev_ha_close = na

// Initialize HA Open
if barstate.isfirst
    ha_open := open
    prev_ha_close := ha_close
else
    if use_heiken_ashi
        ha_open := (ha_open[1] + prev_ha_close) / 2
        prev_ha_close := ha_close
    else
        ha_open := open

ha_high = use_heiken_ashi ? math.max(high, math.max(ha_open, ha_close)) : high
ha_low = use_heiken_ashi ? math.min(low, math.min(ha_open, ha_close)) : low

// Bollinger Bands Calculation
[bb_upper, bb_middle, bb_lower] = ta.bb(ha_close, bb_length, bb_mult)

// Volume Analysis - Conservative
avg_volume = ta.sma(volume, volume_period)
volume_condition = volume > min_volume and volume > (avg_volume * volume_multiplier)

// Price Change Analysis
price_change = barstate.isfirst ? 0 : (ha_close - prev_ha_close) / prev_ha_close
price_change_valid = price_change >= min_price_change and price_change <= max_price_change

// Close-High Difference
high_close_diff = math.abs(1 - (ha_high / ha_close))

// ATR for volatility
atr = ta.atr(20)
atr_percent = atr / ha_close
atr_condition = atr_percent >= min_atr

// ============================================================================
// CONSERVATIVE ENTRY CONDITIONS
// ============================================================================

// 1. Conservative Candle Analysis
green_candle = ha_close > ha_open
close_near_high = high_close_diff < high_close_margin
close_higher_than_prev = barstate.isfirst ? true : ha_close > prev_ha_close
strong_momentum = (ha_close - ha_open) / ha_open > 0.003  // 0.3% minimum body

// 2. Bollinger Bands Analysis - Conservative
bb_upper_touch = ha_close >= bb_upper * 0.995  // Very close to upper band
bb_middle_cross = barstate.isfirst ? false : ha_close > bb_middle and prev_ha_close <= bb_middle[1]
bb_expansion = (bb_upper - bb_lower) / bb_middle > 0.02  // Band expansion

// 3. Momentum Indicators - Conservative
rsi = ta.rsi(ha_close, 14)
rsi_oversold = rsi < 65 and rsi > 35  // Conservative range
macd_line = ta.ema(ha_close, 12) - ta.ema(ha_close, 26)
macd_signal = ta.ema(macd_line, 9)
macd_bullish = macd_line > macd_signal and macd_line[1] <= macd_signal[1]

// 4. Trend Confirmation - Conservative
ema_20 = ta.ema(ha_close, 20)
ema_50 = ta.ema(ha_close, 50)
ema_200 = ta.ema(ha_close, 200)
trend_bullish = ema_20 > ema_50 and ema_50 > ema_200 and ha_close > ema_20

// 5. Conservative Conditions
conservative_momentum = ta.roc(ha_close, 10) > 0.5  // Strong momentum
conservative_volume = volume > avg_volume * 1.5  // Strong volume

// 6. Combined Entry Conditions - Conservative scenarios
entry_scenario_1 = green_candle and close_near_high and volume_condition and bb_upper_touch and rsi_oversold and atr_condition and conservative_momentum
entry_scenario_2 = bb_middle_cross and volume_condition and macd_bullish and trend_bullish and conservative_volume

entry_condition = entry_scenario_1 or entry_scenario_2

// ============================================================================
// ULTRA CONSERVATIVE RISK MANAGEMENT
// ============================================================================

var float stop_loss_price = na
var float take_profit_price = na
var float highest_price = na
var bool trailing_active = false

// Position Management
if entry_condition and strategy.position_size == 0
    stop_loss_price := ha_close * (1 - stop_loss_pct)
    take_profit_price := ha_close * (1 + target_profit)
    highest_price := ha_close
    trailing_active := false

// Ultra Conservative Trailing Stop Logic
if strategy.position_size > 0
    if ha_close > highest_price
        highest_price := ha_close
        if trailing_stop and ha_close > take_profit_price * 0.6  // Start trailing after 60% of target
            trailing_active := true
    
    if trailing_active
        new_trailing_stop = highest_price * (1 - trailing_percent)
        if new_trailing_stop > stop_loss_price
            stop_loss_price := new_trailing_stop

// ============================================================================
// STRATEGY EXECUTION
// ============================================================================

// Entry
if entry_condition and strategy.position_size == 0
    strategy.entry("ETH_CONSERVATIVE_LONG", strategy.long, comment="ETH Conservative Entry")

// Exit Conditions
if strategy.position_size > 0
    // Take Profit
    if ha_close >= take_profit_price
        strategy.close("ETH_CONSERVATIVE_LONG", comment="Take Profit")
    
    // Stop Loss
    if ha_close <= stop_loss_price
        strategy.close("ETH_CONSERVATIVE_LONG", comment="Stop Loss")
    
    // Time-based exit (shorter for conservative)
    if bar_index - strategy.opentrades.entry_bar_index(0) > 30  // Exit after 30 bars
        strategy.close("ETH_CONSERVATIVE_LONG", comment="Time Exit")

// ============================================================================
// VISUALIZATION
// ============================================================================

// Bollinger Bands
plot(bb_upper, "BB Upper", color=color.red, linewidth=1)
plot(bb_middle, "BB Middle", color=color.blue, linewidth=1)
plot(bb_lower, "BB Lower", color=color.green, linewidth=1)

// EMAs
plot(ema_20, "EMA 20", color=color.orange, linewidth=1)
plot(ema_50, "EMA 50", color=color.purple, linewidth=1)
plot(ema_200, "EMA 200", color=color.gray, linewidth=1)

// Entry Signals
plotshape(entry_scenario_1, "Conservative 1", shape.triangleup, location.belowbar, color=color.green, size=size.small)
plotshape(entry_scenario_2, "Conservative 2", shape.circle, location.belowbar, color=color.blue, size=size.small)

// Position Background
bgcolor(strategy.position_size > 0 ? color.new(color.blue, 95) : na, title="Position Background")

// Stop Loss and Take Profit Levels
plot(strategy.position_size > 0 ? stop_loss_price : na, "Stop Loss", color=color.red, style=plot.style_linebr, linewidth=2)
plot(strategy.position_size > 0 ? take_profit_price : na, "Take Profit", color=color.green, style=plot.style_linebr, linewidth=2)

// ============================================================================
// INFORMATION TABLE
// ============================================================================

if barstate.islast
    var table info_table = table.new(position.top_right, 2, 10, bgcolor=color.white, border_width=1)
    
    table.cell(info_table, 0, 0, "Parameter", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 0, "Value", text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 1, "BB Period", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 1, str.tostring(bb_length), text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 2, "BB Multiplier", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 2, str.tostring(bb_mult), text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 3, "Target Profit", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 3, str.tostring(target_profit * 100) + "%", text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 4, "Stop Loss", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 4, str.tostring(stop_loss_pct * 100) + "%", text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 5, "Position Size", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 5, "5%", text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 6, "Conservative", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 6, conservative_mode ? "ON" : "OFF", text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 7, "Min Price Change", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 7, str.tostring(min_price_change * 100) + "%", text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 8, "Volume Multiplier", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 8, str.tostring(volume_multiplier), text_color=color.black, text_size=size.small)
    
    table.cell(info_table, 0, 9, "Scenarios", text_color=color.black, text_size=size.small)
    table.cell(info_table, 1, 9, "2 Conservative", text_color=color.black, text_size=size.small)

// ============================================================================
// ALERTS
// ============================================================================

alertcondition(entry_condition, "ETH Conservative Entry Signal", "ETH Conservative strategy entry signal!")
alertcondition(strategy.position_size > 0 and (ha_close >= take_profit_price or ha_close <= stop_loss_price), 
               "ETH Conservative Exit Signal", "ETH Conservative position closed!")
