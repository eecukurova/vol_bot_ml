{
  "api_key": "YOUR_BINANCE_API_KEY",
  "secret": "YOUR_BINANCE_SECRET_KEY",
  "sandbox": false,
  "exchange": "binance",

  "symbol": "PENGU/USDT",
  "futures_suffix": ":USDT",
  "use_futures": true,
  "margin_mode": "isolated",
  "leverage": 10,
  "hedge_mode": false,
  "reduce_only_default": true,

  "trade_amount_usd": 100.0,
  "dry_run": false,

  "ema": { 
    "fast_period": 12, 
    "slow_period": 26 
  },
  "heikin_ashi": { 
    "enabled": true 
  },

  "multi_timeframe": {
    "timeframes": {
      "1h":  { "enabled": true, "take_profit": 0.006, "stop_loss": 0.015 },
      "30m": { "enabled": true, "take_profit": 0.006, "stop_loss": 0.015 },
      "15m": { "enabled": true, "take_profit": 0.006, "stop_loss": 0.015 }
    },
    "filter_tf": "1h",
    "trigger_tf": "15m"
  },

  "signal_management": {
    "single_position_only": true,
    "cooldown_after_exit": 300,

    "use_intrabar_signals": true,
    "ema_cross_hysteresis": 0.0,
    "tf_cooldown_bars": { "15m": 1, "30m": 1, "1h": 1 },

    "timeframe_validation": {
      "enabled": true,
      "min_candles_for_signal": 120,
      "require_confirmed_candle": false
    }
  },

  "risk_management": {
    "stop_loss_percentage": 0.015,
    "take_profit_percentage": 0.006,
    "break_even_enabled": true,
    "break_even_percentage": 0.005
  },

  "sl_tp": {
    "trigger_source": "MARK_PRICE",
    "hedge_mode": false
  },

  "idempotency": {
    "enabled": true,
    "state_file": "runs/multiple_ema_crossover_state.json"
  },

  "logging": {
    "level": "INFO",
    "file": "multiple_ema_crossover_trading.log",
    "detailed_signals": true,
    "detailed_positions": true,
    "detailed_timeframes": true
  },

  "telegram": {
    "enabled": true,
    "bot_token": "YOUR_TELEGRAM_BOT_TOKEN",
    "chat_id": "YOUR_TELEGRAM_CHAT_ID"
  }
}